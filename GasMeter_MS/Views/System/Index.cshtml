@model GasMeter_MS.Models.SysInfo

@{
    ViewBag.Title = "编辑网站信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet box red-pink">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> 编辑网站信息
        </div>
    </div>
    <div class="portlet-body form">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <span class="label label-@ViewBag.color">@ViewBag.message！</span>
                    <div class="form-group has-warning">
                        @Html.LabelFor(model => model.SiteName, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa fa-check tooltips" data-original-title="Email address" data-container="body"></i>
                                @Html.EditorFor(model => model.SiteName, new { htmlAttributes = new { @class = "form-control js-input", alt = @Model.SiteName } })
                                @Html.ValidationMessageFor(model => model.SiteName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        @Html.LabelFor(model => model.Port, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa fa-check tooltips" data-original-title="You look OK!" data-container="body"></i>
                                @Html.TextBoxFor(model => model.Port, new { @class = "form-control js-input", alt = @Model.Port })
                                @Html.ValidationMessageFor(model => model.Port, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        @Html.LabelFor(model => model.Baud, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa fa-check tooltips" data-original-title="please provide an email" data-container="body"></i>
                                @Html.EditorFor(model => model.Baud, new { htmlAttributes = new { @class = "form-control js-input", alt = @Model.Baud } })
                                @Html.ValidationMessageFor(model => model.Baud, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        @Html.LabelFor(model => model.Memo, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa fa-check tooltips" data-original-title="please write a valid email" data-container="body"></i>
                                @Html.EditorFor(model => model.Memo, new { htmlAttributes = new { @class = "form-control js-input", alt = @Model.Memo } })
                                @Html.ValidationMessageFor(model => model.Memo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-4 col-md-8">
                            <button type="button" class="btn default" id="js-btn-reset" >重置</button>
                            <button type="submit" class="btn blue">提交</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#js-btn-reset').click(function () {
            $('.js-input').each(function () {
                $(this).val($(this).attr('alt')).prev(".tooltips").removeClass('fa-warning').addClass('fa-check')
            });
        });
        $(document).on("input", ".js-input", function () {
            var $this = $(this);
            $this.val().trim() == '' ? $this.prev(".tooltips").removeClass('fa-check').addClass('fa-warning') : $this.prev(".tooltips").removeClass('fa-warning').addClass('fa-check');
        });
    </script>
}
