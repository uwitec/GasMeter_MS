@model IEnumerable<GasMeter_MS.Models.KeyValue>

@{
    ViewBag.Title = "初始化数据";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-bell-o"></i>初始化选项
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa fa-briefcase"></i> @Html.DisplayNameFor(model => model.Key)
                                </th>
                                <th class="hidden-xs">
                                    <i class="fa fa-user"></i> @Html.DisplayNameFor(model => model.Value)
                                </th>
                                <th>
                                    <i class="fa fa-shopping-cart"></i> @Html.DisplayNameFor(model => model.BMemo)
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">
                                        <div class="success">
                                        </div>
                                        <a href="#">
                                            @Html.DisplayFor(modelItem => item.Key)
                                        </a>
                                    </td>
                                    <td class="hidden-xs">
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BMemo)
                                    </td>
                                    <td>
                                        <a href="#" class="btn default btn-xs purple">
                                            <i class="fa fa-edit"></i> @Html.ActionLink("设置选项值", "Edit", new { id = item.Id })
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>